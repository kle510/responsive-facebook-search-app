<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.kevin.hw9v1.EventsFragment">

    <ListView
        android:id="@+id/result_events_listview"
        android:layout_width="match_parent"
        android:background="#67dcdcdc"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LinearLayout"/>


    <!-- padding bottom is just a quick fix -->
    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:paddingBottom="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/result_events_button_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_prev">
        </Button>

        <Button
            android:id="@+id/result_events_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_next"
            android:layout_weight="1">
        </Button>
    </LinearLayout>

</RelativeLayout>
